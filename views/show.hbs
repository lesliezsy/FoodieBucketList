<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <h5 class="mt-4 mb-2 restaurant-show-title">{{restaurant.name}}</h5>
      <h6 class="mb-3 restaurant-show-title">{{restaurant.name_en}}</h6>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="my-3">
        {{restaurant.description}}
      </p>

      <div class="col">
        <img class="rounded mx-auto d-block mb-2 w-100" src="{{#if restaurant.image}}{{restaurant.image}}{{else}}/images/imgHolder.jpeg{{/if}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      </div>

      <div class="col my-3 d-flex flex-row-reverse">
        <a class="btn btn-minor ml-3" href="./{{restaurant._id}}/edit">Edit</a>
        <form action="./{{restaurant._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-major ml-3">
            Delete
          </button>
        </form>
        <a class="btn btn-third" href="/" role="button">Back</a>
      </div>

    </div>
  </div>
</div>