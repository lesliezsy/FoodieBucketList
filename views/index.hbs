<div class="container mt-5">

    <!-- search bar -->
    <form action="/search">
        <div class="input-group">
            {{!-- input的value為空時，不能搜尋 --}}
            <input type="text" id="form" name="keyword" value="{{keyword}}" class="form-control" placeholder="Search"
                aria-label="Restaurant Name" value="" aria-describedby="search-button">
            <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button" onclick="checkEmpty()"><i
                        class="fas fa-search"></i></button>
            </div>
        </div>
    </form>

    <!-- restaurant list -->
    <div class="row mt-4">
        <div class="col">
            <div> {{ noResult }}</div>
            <div class="card-columns">
                {{#each restaurants}}
                <a href="./restaurants/{{this._id}}" class="text-major text-decoration-none">
                    <div class="card">
                        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                        <div class="card-body p-3">
                            <h6 class="card-title mb-1">{{this.name}}</h6>
                            <div class="restaurant-category mb-1">
                                <i class="fas fa-utensils pr-1"></i> {{this.category}}
                            </div>
                            <span class="badge badge-pill sec-bg font-weight-normal">
                                {{this.rating}}
                                <i class="fas fa-star fa-xs"></i>
                            </span>

                            <div class="d-flex justify-content-end">
                                <a class="btn btn-sm rounded-circle primary-color"
                                    href="./restaurants/{{this._id}}/edit"><i class="fas fa-pen"></i></a>
                                <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-sm rounded-circle primary-color">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </a>
                {{/each}}
            </div>

        </div>
    </div>

</div>

<script>
    function checkEmpty() {
        console.log(document.getElementById("form").value)
        if (document.getElementById("form").value === '') {
            alert('請輸入餐廳名後再進行搜尋！');
            return false;
        }

    }
</script>